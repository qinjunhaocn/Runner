<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="30dp"
    android:paddingTop="30dp"
    android:paddingEnd="30dp"
    android:paddingBottom="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/request_text"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/allow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/allow_once"
            android:textColor="@color/material_dynamic_primary30"
            app:backgroundTint="@color/material_dynamic_primary90"
            app:rippleColor="@color/material_dynamic_primary70"
            app:shapeAppearance="@style/TopButtonStyle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/refuse"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/refuse"
            android:textColor="@color/material_dynamic_primary30"
            app:backgroundTint="@color/material_dynamic_primary90"
            app:rippleColor="@color/material_dynamic_primary70"
            app:shapeAppearance="@style/BottomButtonStyle" />
    </LinearLayout>

</LinearLayout>